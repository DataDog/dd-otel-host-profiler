# syntax=docker.io/docker/dockerfile:1.7-labs
FROM ubuntu:24.04

RUN apt-get update && \
    apt-get install -y --no-install-recommends binutils ca-certificates

COPY docker/entrypoint.sh /entrypoint.sh
COPY --parents agent-** /tmp/

RUN mv /tmp/agent-$(uname -p)/dd-opentelemetry-profiler /usr/local/bin/dd-opentelemetry-profiler \
    && chmod +x /usr/local/bin/dd-opentelemetry-profiler \
    && rm -rf /tmp/agent*

RUN apt-get clean && \
    rm -rf /var/lib/apt/lists/*

ENTRYPOINT ["/entrypoint.sh"]
CMD ["/usr/local/bin/dd-opentelemetry-profiler"]
